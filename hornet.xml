<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

 <path>hornet2.ac</path>

  <animation>
    <object-name>axeA1</object-name>
    <object-name>axeA2</object-name>
    <object-name>axeA3</object-name>
    <object-name>axeA4</object-name>
    <object-name>roueA</object-name>
    <object-name>axeG1</object-name>
    <object-name>roueG</object-name>
    <object-name>axeD1</object-name>
    <object-name>roueD</object-name>
    <object-name>axeB</object-name>
    <object-name>roueB</object-name>
    <object-name>rotor</object-name>
    <object-name>rotor2</object-name>
    <object-name>rotor3</object-name>
    <object-name>rotor4</object-name>
    <object-name>helice</object-name>
    <object-name>moyeu</object-name>
    <object-name>direction</object-name>
    <object-name>piedG</object-name>
    <object-name>piedD</object-name>
    <object-name>posepied</object-name>
    <object-name>aile</object-name>
    <object-name>bidons</object-name>
    <object-name>manche1</object-name>
    <object-name>manche2</object-name>

   <!-- Objets transparents -->
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
    <object-name>propdisc1</object-name>
    <object-name>propblur1</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
    <object-name>propdisc1</object-name>
    <object-name>propblur1</object-name>
  </animation>

  <!-- Sélection Pâles/blur  rotor parincipal -->
  <animation>
    <type>select</type>
    <object-name>propdisc1</object-name>
    <condition>
      <greater-than>
        <property>rotors/main/rpm</property>
        <value>150</value>
      </greater-than>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>propblur1</object-name>
    <condition>
    <and>
      <greater-than>
        <property>rotors/main/rpm</property>
        <value>60</value>
      </greater-than>
      <less-than>
        <property>rotors/main/rpm</property>
        <value>150.001</value>
      </less-than>
    </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>rotor</object-name>
    <condition>
      <less-than>
        <property>rotors/main/rpm</property>
	<value>150</value>
      </less-than>
    </condition>
  </animation>

  <!-- Rotation du rotor -->
  <animation>
    <type>rotate</type>
    <object-name>propdisc1</object-name>
    <object-name>propblur1</object-name>
    <object-name>rotor</object-name>
    <object-name>rotor2</object-name>
    <object-name>rotor3</object-name>
    <object-name>rotor4</object-name>
<!-- <property>rotors/main/roll-deg</property> -->
    <property>rotors/main/tilt/roll-deg</property>
    <factor>  1 </factor>
    <axis>
      <x1-m> -0.190 </x1-m>
      <y1-m>  0.000 </y1-m>
      <z1-m>  1.029 </z1-m>
      <x2-m> -0.137 </x2-m>
      <y2-m>  0.000 </y2-m>
      <z2-m>  1.019 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>propdisc1</object-name>
    <object-name>propblur1</object-name>
    <object-name>rotor</object-name>
    <object-name>rotor2</object-name>
    <object-name>rotor3</object-name>
<!-- <property>rotors/main/yaw-deg</property> -->
    <property>rotors/main/tilt/pitch-deg</property>
    <factor> 1 </factor>
    <center>
      <x-m> -0.157 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  1.060 </z-m>
    </center>
    <axis>
      <x>  0.000 </x>
      <y>  1.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>propdisc1</object-name>
    <object-name>propblur1</object-name>
    <object-name>rotor</object-name>
    <object-name>rotor2</object-name>
    <property>rotors/main/blade[0]/position-deg</property>
    <center>
      <x-m> -0.129 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  1.148 </z-m>
    </center>
    <axis>
      <x> 0.000 </x>
      <y> 0.000 </y>
      <z> 1.000 </z>
    </axis>
  </animation>

	<animation>
    <type>rotate</type>
    <object-name>propdisc1</object-name>
    <object-name>propblur1</object-name>
    <object-name>rotor</object-name>
    <property>rotors/main/blade[0]/flap-deg</property>
    <center>
      <x-m> -0.129 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  1.148 </z-m>
    </center>
    <axis>
      <x> 0.000 </x>
      <y> -1.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

	
  <!-- L'hélice --> 
  <!-- Séléction de l'objet visible en fonction des rpm -->
  <animation>
    <type>select</type>
    <object-name>propdisc</object-name>
    <condition>
      <greater-than>
        <property>engines/engine[0]/rpm</property>
        <value>1500</value>
      </greater-than>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>propblur</object-name>
    <condition>
    <and>
      <greater-than>
        <property>engines/engine[0]/rpm</property>
        <value>600.000</value>
      </greater-than>
      <less-than>
        <property>engines/engine[0]/rpm</property>
        <value>1500.001</value>
      </less-than>
    </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>helice</object-name>
    <condition>
      <less-than>
        <property>engines/engine[0]/rpm</property>
	<value>1500</value>
      </less-than>
    </condition>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>helice</object-name>
    <object-name>moyeu</object-name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
    <property>engines/engine[0]/rpm</property>
    <factor> 1 </factor>
    <center>
      <x-m>  0.502 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.091 </z-m>
    </center>
    <axis>
      <x> -1.000 </x>
      <y>  0.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <!-- Gouverne de direction -->
  <animation>
    <type>rotate</type>
    <object-name>direction</object-name>
    <property>controls/flight/rudder</property>
    <factor>20</factor>
    <center>
      <x-m>  1.084 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.944 </z-m>
    </center>
    <axis>
      <x> 0.00 </x>
      <y> 0.00 </y>
      <z> 1.00 </z>
    </axis>
  </animation>

  <!-- Rotation de la roue avant en fonction de la gouverne de direction -->
  <animation>
    <type>rotate</type>
    <object-name>roueA</object-name>
    <object-name>axeA1</object-name>
    <object-name>axeA2</object-name>
    <object-name>axeA3</object-name>
    <object-name>axeA4</object-name>
    <property>controls/flight/rudder</property>
    <factor>  20.0 </factor>
    <center>
      <x-m> -1.507 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.867 </z-m>
    </center>
    <axis>
      <x>  0.000 </x>
      <y>  0.000 </y>
      <z> -1.000 </z>
    </axis>
  </animation>

  <!-- Rotation des roues lors du roulage -->
  <animation>
    <type>spin</type>
    <object-name>roueA</object-name>
    <property>gear/gear[0]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m> -1.444 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -1.095 </z-m>
    </center>
    <axis>
      <x>  0.000 </x>
      <y> -1.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>roueG</object-name>
    <property>gear/gear[1]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m> -0.136 </x-m>
      <y-m> -0.879 </y-m>
      <z-m> -1.096 </z-m>
    </center>
    <axis>
      <x>  0.000 </x>
      <y> -1.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>roueD</object-name>
    <property>gear/gear[2]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m> -0.136 </x-m>
      <y-m>  0.879 </y-m>
      <z-m> -1.096 </z-m>
    </center>
    <axis>
      <x>  0.000 </x>
      <y> -1.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>roueB</object-name>
    <property>gear/gear[3]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m>  1.382 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.972 </z-m>
    </center>
    <axis>
      <x>  0.000 </x>
      <y> -1.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

</PropertyList>

