<?xml version="1.0"?>

<PropertyList>

  <sim>
 
    <author>BARANGER Emmanuel, SHOEBRIDGE Don (3D), JUSTUS Maik (FDM)</author>
    <aircraft-version>0.1</aircraft-version>
    <status>Alpha</status>
   
    <fuel-fraction>0.8</fuel-fraction>
  
    <startup>
      <splash-texture>Aircraft/Hornet/hornet-splash.rgb</splash-texture>
      <splash-title>http://www.gdt-systems.com</splash-title>
    </startup>

    <model>
      <path>Aircraft/Hornet/Models/hornet.xml</path>
    </model>

    <sound>
      <path>Aircraft/Hornet/Sounds/hornet-sound.xml</path>
    </sound>

    <hud>
      <enable3d>false</enable3d>
    </hud>

    <virtual-cockpit>true</virtual-cockpit>
    <allow-toggle-cockpit>true</allow-toggle-cockpit>

    <view n="0">
      <internal archive="y">true</internal>
      <config>
        <x-offset-m archive="y">  0.000 </x-offset-m>	<!--right-->
        <y-offset-m archive="y">  0.377 </y-offset-m>	<!--up-->
        <z-offset-m archive="y"> -0.553 </z-offset-m>	<!--back-->
      </config>
    </view>

    <view n="5">
      <config>
        <default-field-of-view-deg> 20 </default-field-of-view-deg>
      </config>
    </view>

    <chase-distance-m type="double" archive="y">-10.0</chase-distance-m>

    <multiplay>
      <chat_display>1</chat_display>
    </multiplay>

  </sim>

  <controls>
    <engines>
      <engine n="0">
        <magnetos>3</magnetos>
      </engine>
    </engines>
  </controls>

</PropertyList>

