      <rpm>500</rpm>
      <running>true</running>
    </engine>
  </engines>

  <input>
    <keyboard include="Nasal/hornet-keyboard.xml"/>
  </input>
 
  <nasal>
    <noratlas>
      <file>Aircraft/Hornet/Nasal/doors.nas</file>
    </noratlas>
  </nasal>
-->

</PropertyList>

