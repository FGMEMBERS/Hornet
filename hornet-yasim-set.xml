<PropertyList include="hornet-base.xml">

  <sim>

    <description>Autogiro Hornet (YASim)</description>
    <flight-model>yasim</flight-model>
    <aero>hornet-yasim</aero>

    <view n="0">
      <internal archive="y">true</internal>
      <config>
        <x-offset-m archive="y">  0.0 </x-offset-m>
        <!--right-->
        <y-offset-m archive="y">  0.0 </y-offset-m>
        <!--up-->
        <z-offset-m archive="y"> -1.778 </z-offset-m>
        <!--back-->
      </config>
    </view>
    <view n="5">
      <config>
        <default-field-of-view-deg> 20 </default-field-of-view-deg>
      </config>
    </view>
    <chase-distance-m type="double" archive="y">-10.0</chase-distance-m>

    <model>
      <hornet>
        <rotor-step-deg type="float">-1.0</rotor-step-deg>
      </hornet>
    </model>

  </sim>

  <input>
    <keyboard>
      <key n="110">
        <name>n</name>
        <desc>Rotate rotor by hand</desc>
        <binding>
        <command>nasal</command>
        <script>
          setprop("/controls/rotor/handstart", 1);
          setprop("/controls/rotor/reltarget", 0.2);
          settimer(func { setprop("/controls/rotor/reltarget",0) }, 2);
        </script>
        </binding>
        <mod-up>
          <binding>
            <command>nasal</command>
            <script>interpolate("/controls/rotor/brake", 0.0, 2)</script>
          </binding>
        </mod-up>
      </key>
    </keyboard>
  </input>

  <controls>
    <rotor>
      <handstart type="int">0</handstart>
       <reltarget type="float">0</reltarget>
    </rotor>
    <gear>
      <brake-parking>1</brake-parking>
    </gear>
    <lighting>
      <strobe type="bool">true</strobe>
      <beacon type="bool">true</beacon>
      <nav-lights type="bool">true</nav-lights>
    </lighting>
  </controls>

  <nasal>
    <hornet>
      <file>Aircraft/Hornet/Nasal/hornet.nas</file>
    </hornet>
  </nasal>

  <rotors>
    <main>
      <rpm type="double">0</rpm>
    </main>
  </rotors>

</PropertyList>

